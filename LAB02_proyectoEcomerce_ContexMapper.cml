BoundedContext GestionPedidosContext implements GestionPedidos {
  type FEATURE
   
  Aggregate CarritoCompras {
    Entity ItemCarrito {
      aggregateRoot
      String productoId
      String nombreProducto
      Double precioUnitario
      int cantidad
    }
  }
}


BoundedContext GestionProductosContext implements GestionProductos {
  type FEATURE
 
  Aggregate CatalogoProductos {
    Entity Producto {
      aggregateRoot
      String productoId
      String nombre
      String descripcion
      Double precio
      int cantidadEnInventario
    }
    
    Entity DescripcionProducto {
      String productoId
      String descripcion
      String imagen
    }
  }
}

BoundedContext GestionClientesContext implements GestionClientes {
  type FEATURE
  
  Aggregate Clientes {
    Entity Cliente {
      aggregateRoot
      String clienteId
      String nombre
      String apellido
      String correoElectronico
    }

    Entity Direccion {
      String direccionId
      String calle
      String ciudad
      String codigoPostal
    }
  }

 Aggregate HistorialPedidos {
    Entity  Pedido {
      aggregateRoot
      String pedidoId
      String clienteId
      Date fechaPedido
    }

    Entity LineaPedido {
      String productoId
      int cantidad
      Double precioUnitario
    }
  }
}

BoundedContext ProcesoPagoContext implements ProcesamientoPagos {
  type FEATURE
  
  Aggregate TransaccionesPago {
    Entity Transaccion {
      aggregateRoot
      String transaccionId
      String clienteId
      Double monto
      Date fecha
    }
    
    Entity MetodoPago {
      String metodoPagoId
      String nombre
    }
  }

  Aggregate PasarelasPago {
    Entity PasarelaPago {
      aggregateRoot
      String pasarelaId
      String nombre
    }

    Entity RegistroPago {
      String registroPagoId
      String transaccionId
      String pasarelaId
      Double monto
      String estado
    }
  }

}


BoundedContext CarritoComprasContext implements CarritoCompras {
  type FEATURE
  
  Aggregate Carrito {
    Entity ItemCarrito {
      aggregateRoot
      String itemId
      String productoId
      Integer cantidad
      Double precioUnitario
    }
    
    Entity Cliente {
      String clienteId
      String nombre
      String direccion
    }
  }

  Aggregate TransaccionesCompra {
    Entity OrdenCompra {
      aggregateRoot
      String ordenId
      String clienteId
      Date fechaOrden
      Double total
      String estado
    }

    Entity DetalleOrden {
      String detalleId
      String ordenId
      String itemId
      Integer cantidad
      }
      
      }
}
BoundedContext GestionSesionesContext implements GestionSesiones {
  type SYSTEM
  Aggregate SesionesUsuario {
    Entity Sesion {
      aggregateRoot
      String sesionId
      String usuarioId
      LocalDateTime fechaInicio
      LocalDateTime fechaExpiracion
    }
  }

  Aggregate CookiesUsuario {
    Entity Cookie {
      aggregateRoot
      String cookieId
      String usuarioId
      String valorCookie
      LocalDateTime fechaCreacion
      LocalDateTime fechaExpiracion
    }
  }
}

BoundedContext SeguridadContext implements Seguridad {
  type SYSTEM
 
  Aggregate AmenazasSeguridad {
    Entity Amenaza {
      aggregateRoot
      String amenazaId
      String nombre
      String descripcion

      
    }
  }
}

BoundedContext NotificacionesComunicacionesContext implements NotificacionesComunicaciones {
