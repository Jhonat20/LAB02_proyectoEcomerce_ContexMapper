BoundedContext IntegracionRedesSocialesContext implements IntegracionRedesSociales {
  type FEATURE

  Aggregate PublicacionesRedesSociales {
    Entity Publicacion {
      aggregateRoot
      String publicacionId
      String usuarioId
      String contenido
      LocalDateTime fechaPublicacion
      List<String> etiquetas
    }
  }

  Aggregate PerfilesUsuariosRedesSociales {
    Entity UsuarioRedesSociales {
      aggregateRoot
      String usuarioId
      String nombreUsuario
      String nombreCompleto
      String biografia
      List<String> seguidores
      List<String> siguiendo
    }
  }

  Aggregate ComentariosPublicaciones {
    Entity Comentario {
      aggregateRoot
      String comentarioId
      String usuarioId
      String publicacionId
      String contenido
      LocalDateTime fechaComentario
    }
  }
}
BoundedContext ProcesoPagoContext implements ProcesamientoPagos {
  type FEATURE
  domainVisionStatement "Gestiona el proceso de pago, incluyendo la integración con pasarelas de pago y confirmación de transacciones."

  Aggregate TransaccionesPago {
    Entity Transaccion {
      aggregateRoot
      String transaccionId
      String clienteId
      Double monto
      Date fecha
    }
    
    Entity MetodoPago {
      String metodoPagoId
      String nombre
    }
  }

  Aggregate PasarelasPago {
    Entity PasarelaPago {
      aggregateRoot
      String pasarelaId
      String nombre
    }

    Entity RegistroPago {
      String registroPagoId
      String transaccionId
      String pasarelaId
      Double monto
      String estado
    }
  }

}


